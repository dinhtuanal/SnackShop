@using SharedObjects.ValueObjects
@model List<VCategory>

@{
    ViewData["Title"] = "Index";
}
@section Title{
    <title>Thể loại</title>
}
@section Breadcrumb{
    <li class="breadcrumb-item active" aria-current="page">Thể loại</li>
}
@section SlimPageTitle{
    Thể loại
}
<div class="section-wrapper mg-t-20">
    <label class="section-title">Tất cả các thể loại</label>
    <p class="mg-b-20 mg-sm-b-40">Hiễn thị theo id, tên, miêu tả</p>

    <div class="table-responsive">
    <table class="table table-bordered mg-b-0 text-center">
        <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Miêu tả</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <th scope="row">@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>
                <a class="" data-toggle="modal" href="#model-add" data-id="" data-target="#model-add"><i class="fa fa-edit text-success"></i></a>
                <a href=""><i class="fa fa-trash text-danger"></i></a>
            </td>       
        </tr>
        }
        </tbody>
    </table>
    </div><!-- table-responsive -->
</div>
<!--Modal arear-->
<div id="model-add" class="modal fade show" >
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content tx-size-sm">
            <div class="modal-header pd-x-20">
                <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Cập nhật tên thể loại</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body pd-20">
                <div class="form-group">
                    <input class="form-control" type="text" name="category" value="Tên thể loại" placeholder="Vui lòng nhập tên thể loại" style="width: 700px">
                </div>
            </div><!-- modal-body -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div><!-- modal-dialog -->
</div>