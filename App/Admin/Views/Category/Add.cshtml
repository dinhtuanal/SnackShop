@model SharedObjects.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Thêm mới";
}
@section Title{
<title>Thêm thể loại</title>
}
@section Breadcrumb{
<li class="breadcrumb-item" aria-current="page"><a asp-action="index" asp-controller="category">Thể loại</a></li>
<li class="breadcrumb-item active" aria-current="page">Thêm thể loại</li>
}
@section SlimPageTitle{
    Thêm mới thể loại
}
<div class="section-wrapper mg-t-20">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Tên thể loại</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

