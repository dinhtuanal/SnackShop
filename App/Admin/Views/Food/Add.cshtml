@using SharedObjects.ValueObjects
@model List<VSubCategory>
@section Title{
<title>Thêm mới, cập nhật món ăn</title>
}
@section Breadcrumb{
<li class="breadcrumb-item active" aria-current="page">Thêm mới, cập nhật món ăn</li>
}
@section SlimPageTitle{
    Thêm, cập nhật món ăn
}
@section Script{
    <script src="~/js/food.js"></script>
}
<div class="section-wrapper mg-t-20">
    <div class="row">
        <div class="col-md-12">
            <form id="frm-food">
                <p name="FoodId" id="hid-id" hidden >@ViewBag.FoodId</p>
                <div class="form-group">
                    <label>Tên</label>
                    <input id="txt-name" name="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Giá (VNĐ)</label>
                    <input name="Price" id="txt-price" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Ảnh</label>
                    <input name="Image" id="img" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mô tả ngắn</label>
                    <input name="Description" id="txt-desc" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Nội dung</label>
                    <textarea rows="3" name="Content" id="txt-content" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select name="Status" id="status" class="form-control">
                        <option value="0" >InActice</option>
                        <option value="1" selected>Active</option>
                    </select>
                </div>
                <input name="DateCreated" hidden />
                <div class="form-group">
                    <label name="SubCategoryId" class="control-label">Thuộc loại</label>
                    <select id="sub-name" class="form-control">
                        @foreach (var item in Model)
                        {
                            <option value="@item.SubCategoryId">@item.SubCategoryName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <a class="btn btn-success save">Lưu bài viết</a>
                </div>
            </form>
        </div>
    </div>
</div>
