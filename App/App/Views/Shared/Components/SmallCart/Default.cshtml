@using SharedObjects.ValueObjects
@model List<CartItem>
<div class="top-cart-block">
    <div class="top-cart-info">
        <a href="javascript:void(0);" class="top-cart-info-count">@ViewBag.CartItems mặt hàng</a>
        <a href="javascript:void(0);" class="top-cart-info-value">@ViewBag.TotalPrice.ToString("N0")</a>
    </div>
    <i class="fa fa-shopping-cart"></i>

    <div class="top-cart-content-wrapper">
        <div class="top-cart-content">
            <ul class="scroller" style="height: 250px;">
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="@Url.Action("Detail", "Food", new{id = @item.Id})"><img src="@item.Image" alt="@item.Name" width="37" height="34"></a>
                            <span class="cart-content-count">x @item.Qty</span>
                            <strong><a href="@Url.Action("Detail", "Food", new{id = @item.Id})">@item.Name</a></strong>
                            <em>@item.TotalPrice.ToString("N0")</em>
                            <a href="javascript:void(0);" class="del-goods">&nbsp;</a>
                        </li>
                    }
                }
                else
                {
                    <li>
                        Danh sách trống
                    </li>
                }
            </ul>
            <div class="text-right">
                <a asp-action="Index" asp-controller="Cart" class="btn btn-default">Giỏ hàng</a>
                <a href="shop-checkout.html" class="btn btn-primary">Thanh toán</a>
            </div>
        </div>
    </div>
</div>